{
  "engine": "liquid",
  "template": {
    "source": "<div class=\"report-wrapper\">\r\n  {% for obj in data %}\r\n    <div class=\"report-container\">\r\n      <h1>Hello, {{ obj.name | text }}!</h1>\r\n      <ul>\r\n        {% for item in obj.items %}\r\n          <li>Item {{ forloop.index }}, valor {{ item | number }}</li>\r\n        {% endfor %}\r\n      </ul>\r\n    </div>\r\n  {% endfor %}\r\n</div>\r\n"
  },
  "assets": {
    "scripts": {
      "number": "return (value) => new Intl.NumberFormat(\"pt-BR\", { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(value)",
      "text": "return (value) => `<strong>${value?.toUpperCase()}</strong>`"
    }
  }
}